{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}
